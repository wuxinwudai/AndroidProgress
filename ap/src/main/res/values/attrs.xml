    <attr name="ProgressSpinSpeed" format="float"/>
    <attr name="ProgressSpinCycleTime" format="integer"/>
    <attr name="ProgressBarColor" format="color"/>
    <attr name="ProgressBarWidth" format="dimension"/>
    <attr name="ProgressBarLength" format="integer"/>
    <attr name="ProgressBarMaxLength" format="integer"/>
    <attr name="ProgressRingColor" format="color"/>
    <attr name="ProgressRingWidth" format="dimension"/>
    <attr name="ProgressCircleRadius" format="dimension"/>
