        <attr name="ProgressCompletedHeight"/>
        <attr name="ProgressUnCompletedHeight"/>
        <attr name="ProgressTextColor"/>
        <attr name="ProgressTextSize"/>
        <attr name="ProgressTextOffset"/>
    </declare-styleable>

    <declare-styleable name="SpinProgress">
        <attr name="ProgressSpinCycleTime"/>
        <attr name="ProgressSpinSpeed" />
        <attr name="ProgressBarColor" />
        <attr name="ProgressBarWidth" />
        <attr name="ProgressBarLength"/>
        <attr name="ProgressBarMaxLength"/>
        <attr name="ProgressRingColor"/>
        <attr name="ProgressRingWidth" />
        <attr name="ProgressCircleRadius"/>
    </declare-styleable>

    <declare-styleable name="ChangeColorSpinProgress">
        <attr name="ProgressSpinCycleTime"/>
        <attr name="ProgressSpinSpeed" />
        <attr name="ProgressBarWidth" />
        <attr name="ProgressBarLength"/>
        <attr name="ProgressBarMaxLength"/>
        <attr name="ProgressRingColor"/>
        <attr name="ProgressRingWidth" />
        <attr name="ProgressCircleRadius"/>
        <attr name="ProgressBarColors"/>
    </declare-styleable>

    <declare-styleable name="RingProgress">
        <attr name="Progress"/>
        <attr name="ProgressTextColor"/>
        <attr name="ProgressTextSize"/>
        <attr name="ProgressBarColor"/>
        <attr name="ProgressBarWidth"/>
        <attr name="ProgressRingColor"/>
        <attr name="ProgressRingWidth"/>
        <attr name="ProgressCircleRadius"/>
    </declare-styleable>

    <declare-styleable name="RoundProgress">
        <attr name="Progress"/>
        <attr name="ProgressTextColor"/>
        <attr name="ProgressTextSize"/>
        <attr name="ProgressBarColor"/>
        <attr name="ProgressRingColor"/>
        <attr name="ProgressRingWidth"/>
        <attr name="ProgressCircleRadius"/>
    </declare-styleable>

    <declare-styleable name="ArcProgress">
        <attr name="Progress"/>
        <attr name="ProgressTextColor"/>
        <attr name="ProgressTextSize"/>
        <attr name="ProgressBarColor"/>
        <attr name="ProgressRingColor"/>
        <attr name="ProgressRingWidth"/>
        <attr name="ProgressCircleRadius"/>
        <attr name="Title"/>
        <attr name="TitleTextSize" />
        <attr name="TitleTextColor" />
        <attr name="ArcAngle" />
    </declare-styleable>
</resources>