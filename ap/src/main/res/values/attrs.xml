<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ProgressCompletedColor" format="color"/>
    <attr name="ProgressUnCompletedColor" format="color"/>
    <attr name="ProgressCompletedHeight" format="dimension"/>
    <attr name="ProgressUnCompletedHeight" format="dimension"/>
    <attr name="ProgressTextColor" format="color"/>
    <attr name="ProgressTextSize" format="dimension"/>
